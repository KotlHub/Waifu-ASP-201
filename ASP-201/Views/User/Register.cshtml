@using ASP_201.Models.User
@model RegistrationModel
@{
    ViewData["Title"] = "Вітання";
}
<div class="container text-center p-5">
    <div>
        <h1 class="display-4 text-color-2 fw-bold m-5">Реєстрація пройшла успішно</h1>
    </div>
    <h4>
        Шановний <strong>@Model.RealName</strong>!
    </h4>
    <p>
        Вітаємо вас на нашому сайті. Для входу ви можете використовувати
        свій логін та пароль.
    </p>
    @if (Model.Avatar is not null)
    {
        <img src="/avatars/@(ViewData["savedName"])" alt="Avatar" style="max-height:250px; max-width:250px" />
    }
</div>
